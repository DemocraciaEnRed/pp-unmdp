.banner-welcome
  background-color: #272727;
  padding: 50px 20px
  text-align: center
  .image-large
    height: 110px
  p.title
    color: #FFF;
    font-size: 25px;
    margin: 20px auto;
    max-width: 50%;
    line-height: 1.25;
    font-weight: 300
    @media (max-width: 600px)
      max-width: 80%
      font-size: 25px;
  p.subtitle
    color: #FFF;
    margin: 20px auto 30px;
    max-width: 60%;
    line-height: 1.25;
    font-size: 22px;
    text-transform: none
    @media (max-width: 600px)
      max-width: 80%
      font-size: 18px;
  .row
    justify-content: center

  .button-rounded
    border: none;
    background: transparent;
    //box-shadow: 0px 4px 4px rgba(255, 255, 255, 0.25), inset -6px -6px 10px rgba(140, 3, 117, 0.5), inset 6px 6px 10px rgba(255, 136, 201, 0.5);
    margin-top: 10px
    margin-bottom: 10px;
    display: flex
    &:first-of-type
      justify-content: flex-end;
    @media (max-width:767px)
      margin-bottom: 24px
      text-align:center!important
    a 
      display: block
      width: 70%;
      border-radius: 50px;
      padding: 10px 30px
      color: #fff!important
      border: 2px solid #fff;
      text-align: center
      right: 0
      @media (max-width:767px)
        display: block
        margin: auto
    &:hover
      cursor: pointer;
      a
        border-color: #fff;
        background-color: #fff
        color: #272727!important
    

