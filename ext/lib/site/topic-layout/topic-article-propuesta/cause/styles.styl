.topics-cause-propuesta
  .btn-like
    margin: 10px;
    width: auto
    border-radius: 32px;
    padding: 8px 20px;
    font-weight: 700;
    &.btn-like-empty
      background: transparent
      color: principal-light-color
      border: 2px solid principal-light-color;
      &:hover
        background: principal-light-color
        color: #fff
    &.btn-like-filled
      background: principal-light-color
      color: #FFF;
      border: 2px solid principal-light-color;
      opacity: 0.5