#ideas-topic-card
  width: 100%
  margin: 0 0 1.5em
  height: auto
  min-height: unset
  border-radius: 5px;
  box-shadow: -3px 3px 7px 0 rgba(0, 0, 0, 0.25);
  border: solid 1px #bab8b8;
  border-left-width: 5px;
  padding: 25px 40px;
  @media(max-width:767px)
    padding: 20px
  &:hover
    box-shadow: 0 2px 5px #555
  .topic-header-container
    display: flex
    justify-content: space-between
    align-items: flex-start
    font-size: 14px
    .topic-card-author
      .topic-author
        color: principal-light-color
    .topic-fecha
      color: #000;
      margin-left: 20px;

  .topic-number
    font-size 22px
    padding-right: 10px;
    font-weight: bold;

  .topic-card-info
    padding-bottom: 0
    height: auto

  .topic-card-attrs
    span.badge
      background-color: principal-color
      font-size: 14px
      border-radius: 35px
      color: #fff
      padding:6px 15px 6px 15px
      font-weight: normal;
      text-decoration: none !important
      margin-right:9px
      margin-bottom: 10px

  .topic-card-description, .topic-card-content
    p
      margin-bottom: 20px
      text-transform: none
      line-height: normal;
      font-size: 0.9rem;
    a
      font-size: 15px
      white-space: normal
    .topic-card-title
      color: black
      margin-bottom: 20px;
      font-weight: 700;
      font-size: 1.2rem;
      text-transform: uppercase;
      &:hover
        text-decoration: underline;
        cursor: pointer;


  
  .tags-container
    margin: 10px 0;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    span
      padding: 5px 15px;
      margin: 2px 0;
      border-radius: 7px;
      margin-right: 10px;
      color: #000;
      font-size: 0.9rem;
      background-color: #f5f5f5;
      @media(max-width:600px)
        padding: 3px 5px;
    i
      margin-right: 8px
