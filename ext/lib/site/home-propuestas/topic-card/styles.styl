    .buttons-wrapper
      flex-wrap: wrap;
      text-align: end
      .btn.btn-go
        margin: 10px;
        width: auto
        border-radius: 5px;
        padding: 8px 20px;
        font-weight: 700;
        background: transparent
        color: principal-light-color
        border: 2px solid principal-light-color;
        @media(max-width:767px)
          margin: 0
        &:hover
          background: principal-light-color
          color: #FFF;
          border: 2px solid principal-light-color;
          text-decoration: none;
    .cause-wrapper
      margin-right: 20px;
    .subscribe-wrapperr
      @media screen and (min-width: 769px)
        margin-bottom: 0;
    .proyectista-wrapper
      width: 100%;
      text-align: right;
      .comment 
        margin-left: 20px!important;
      .btn
        border: 2px solid principal-color;
        color: principal-color
        background-color: #FFF
        &:hover
          background-color: #f2f2f2
    .cause-wrapper, .subscribe-wrapperr, .proyectista-wrapper
      float: left;
      //margin-bottom: 15px;
      .btn
        margin: 0
        border-radius: 5px;
        font-weight: 600
        font-size: 14px
        
        .participants
          font-weight: 400
          display: inline-block
          margin-left: 20px;
          color: #202020
          span
            color: principal-color

        &.not-voted,&.not-subscribed
          &:hover
            color: #84305f
          .participants
            color: #202020
            .icon-like, .icon-bell
              color: principal-color

        &.voted,&.subscribed
          .participants
            color: white

      &.cant-vote,&.cant-subscribe
        .btn
          $disabled-color = #656768
          background: white
          color: $disabled-color
          border-color: $disabled-color
          .participants
            color: $disabled-color
            .icon-like, .icon-bell
              color: $disabled-color

  .topic-creation
    font-size: 14px
    margin-bottom: 1em
    margin-top: 0.8em
    display: flex
    align-items: center
    color: #595959

    i
      margin-right: .5em

    .date
      flex: 1
      text-align: right

    .avatar
      margin-right: 5px
      width: 25px
      height: 25px
      border-radius: 50%
      background-size: cover
      background-position: center center

    .topic-card-author
      font-weight: bold
      color: #8c0375
      margin-right: 2px

