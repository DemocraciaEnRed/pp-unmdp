h2.donde-voto
  width:270px

.arrows
  display: none
  cursor: pointer
  padding: 10px
  border-radius: 50%
  color: #fff
  background-color: principal-color
  @media (max-width: 767px)
    display: block

.glyphicon-chevron-right
  position: absolute
  right: 10px
  top: 50%
.glyphicon-chevron-left
  position: absolute
  left: 10px
  top: 50%

.indicators
  position: absolute
  width: 100%
  display: none
  justify-content: center 
  gap: 16px
  left: 0
  bottom: 24px
  @media (max-width: 767px)
    display: flex
  .indicator
    display: block
    height: 12px
    width: 12px
    border: 3px solid principal-color
    border-radius: 50% 
    left: 50%
    &.active
      background-color: principal-color